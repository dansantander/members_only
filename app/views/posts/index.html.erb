<h2>Members are saying:</h2>

<ul class="posts">
  <% @posts.each do |post| %>
    <li>
    <%= link_to post.title, post_path(post) %><br />
    <% if (user_signed_in? && current_user.member_status == true) %>
      <small>
        Written by <%= post.user.name %>
      </small>
    <% end %>
  <% end %>
    </li>
</ul>

